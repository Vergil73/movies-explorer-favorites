<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies Explorer</title>
    <!-- <link rel="stylesheet" href="homepage.css"> -->
</head>
<body>
    <h1>Movies Explorer: Favorites & Trailers</h1>

    <div class="search">
        <div class="input-movieName">
            <input type="text" id="movieName" name="movieName" placeholder="Quick Search"> 
            <button id="searchButton" type="submit">search</button>
        </div>
    </div>

    <br>

    <% moviesDetails.forEach(data => { %>
        <a href="/movies/<%= data.Title %>">
        <img src="<%= data.Poster %>">
        <h3><%= data.Title %></h3> 
        </a>
    <% }); %>
</body>
</html>